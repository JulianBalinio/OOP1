package ar.edu.unlp.info.oo1.Ejercicio24_PoolCar;

public class Pasajero extends Usuario{

	public Pasajero(String nombre, double saldo) {
		super(nombre, saldo);
	}
	
	public boolean registrarViaje(Viaje viaje) {
		double saldo = this.getSaldo();
		double cuota = viaje.cuotaViaje();
		if (saldo - cuota < 0) {
			return false;
		}
		boolean registro = viaje.registrarPasajero(this);
		if (registro) {
			super.descontarSaldo(cuota);
		}
		return registro;
	}

}
